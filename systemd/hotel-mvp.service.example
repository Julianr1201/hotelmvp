[Unit]
Description=Hotel MVP Stack - Docker Compose
Documentation=https://github.com/tu-usuario/hotel-mvp-stack
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
# IMPORTANTE: Cambia esta ruta a la ruta real de tu proyecto
WorkingDirectory=/ruta/completa/al/proyecto/hotel-mvp-stack
# Usa 'docker compose' (nuevo) o 'docker-compose' (antiguo) según tu versión
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0
# Si necesitas ejecutar como usuario específico (recomendado)
# User=tu_usuario
# Si necesitas variables de entorno
# Environment="PATH=/usr/bin:/usr/local/bin"

# Reiniciar si falla
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target

